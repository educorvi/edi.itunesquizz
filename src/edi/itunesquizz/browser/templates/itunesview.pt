<!doctype html>
<html lang="de">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link href="" tal:attributes="href string:${viewdata/statics}/css/bootstrap.min.css" rel="stylesheet">

    <title>iTunes U View</title>
  </head>

  <body>

    <div class="container">

      <form class="form-signin" tal:attributes="action view/setterurl">
        <h2 class="form-signin-heading">Deine E-Mail-Adresse</h2>
        <p><strong></strong></p>
        <div class="form-group">
          <input type="hidden" name="webcode" tal:attributes="value view/webcode">
          <input type="email" class="form-control" name="email" placeholder="student@musterschule.de" required>
        </div>
        <div class="form-group">
          <label>
            <input type="checkbox" required name="erklaerung">
            Ich werde die Aufgabe allein und ohne fremde Hilfe beantworten.
          </label>
        </div>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Absenden</button>
      </form>

    </div> <!-- /container -->

    <script src="" tal:attributes="src string:${viewdata/statics}/js/jquery-3.3.1.slim.min.js"></script>
    <script src="" tal:attributes="src string:${viewdata/statics}/js/popper.min.js"></script>
    <script src="" tal:attributes="src string:${viewdata/statics}/js/bootstrap.min.js"></script>

  </body>
</html>
